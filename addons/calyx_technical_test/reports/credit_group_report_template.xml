<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="credit_group_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-set="group" t-value="doc.get_report_data()"/>
                <div class="page" style="padding: 20px; font-family: Arial, sans-serif;">
                    <h2 style="text-align: center; font-weight: bold;">Credit Group Report</h2>
                    
                    <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px;">
                        <tr>
                            <td style="border: 1px solid black; padding: 8px;"><strong>Group Name:</strong> <t t-esc="group['group_name']"/></td>
                            <td style="border: 1px solid black; padding: 8px;"><strong>Group Code:</strong> <t t-esc="group['group_code']"/></td>
                        </tr>
                        <tr>
                            <td style="border: 1px solid black; padding: 8px;"><strong>Channel:</strong> <t t-esc="group['channel']"/></td>
                        </tr>
                    </table>

                    <h3>Customers</h3>
                    <table style="width: 100%; border-collapse: collapse;">
                        <thead>
                            <tr style="background-color: #f2f2f2;">
                                <th style="border: 1px solid black; padding: 8px;">Name</th>
                                <th style="border: 1px solid black; padding: 8px;">Document Number</th>
                                <th style="border: 1px solid black; padding: 8px;">Phone</th>
                                <th style="border: 1px solid black; padding: 8px;">Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="group['partners']" t-as="partner">
                                <tr>
                                    <td style="border: 1px solid black; padding: 8px;"><t t-esc="partner['name']"/></td>
                                    <td style="border: 1px solid black; padding: 8px;"><t t-esc="partner['document_number']"/></td>
                                    <td style="border: 1px solid black; padding: 8px;"><t t-esc="partner['phone']"/></td>
                                    <td style="border: 1px solid black; padding: 8px;"><t t-esc="partner['email']"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <h3>Sale Orders</h3>
                    <table style="width: 100%; border-collapse: collapse;">
                        <thead>
                            <tr style="background-color: #f2f2f2;">
                                <th style="border: 1px solid black; padding: 8px;">Order Number</th>
                                <th style="border: 1px solid black; padding: 8px;">Date</th>
                                <th style="border: 1px solid black; padding: 8px;">Total Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="group['sale_orders']" t-as="order">
                                <tr>
                                    <td style="border: 1px solid black; padding: 8px;"><t t-esc="order['name']"/></td>
                                    <td style="border: 1px solid black; padding: 8px;"><t t-esc="order['date_order']"/></td>
                                    <td style="border: 1px solid black; padding: 8px;"><t t-esc="order['amount_total']"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <h3>Invoices</h3>
                    <table style="width: 100%; border-collapse: collapse;">
                        <thead class="table-light">
                            <tr style="background-color: #f2f2f2;">
                                <th style="border: 1px solid black; padding: 8px;">Invoice Number</th>
                                <th style="border: 1px solid black; padding: 8px;">Date</th>
                                <th style="border: 1px solid black; padding: 8px;">Amount Due</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="group['invoices']" t-as="invoice">
                                <tr>
                                    <td style="border: 1px solid black; padding: 8px;"><t t-esc="invoice['name']"/></td>
                                    <td style="border: 1px solid black; padding: 8px;"><t t-esc="invoice['invoice_date']"/></td>
                                    <td style="border: 1px solid black; padding: 8px;"><t t-esc="invoice['amount_residual']"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>


<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record model="ir.ui.view" id="xxxxx_company.account_view_move_form_inherit">
            <field name="name">xxxxx_company.account.view.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="channel_id" readonly="1"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="xxxxx_company.account_view_out_invoice_tree_inherit">
            <field name="name">xxxxx_company.account.view.out.invoice.tree.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <field name="channel_id"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="xxxxx_company.sale_view_sales_order_filter_inherit">
            <field name="name">xxxxx_company.sale.view.sales.order.filter.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter" />
            <field name="arch" type="xml">
                <xpath expr="//search/group/filter[@name='status']" position="after">
                    <filter string="Sales Channel" name="channel_id" domain="[('channel_id', '!=', False)]"/>
                </xpath>
            </field>
        </record>

        <record model="ir.actions.act_window" id="xxxxx_company.account_move_action_inherit" >
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'group_by': 'channel_id'}</field>
        </record>
    </data>
</odoo>